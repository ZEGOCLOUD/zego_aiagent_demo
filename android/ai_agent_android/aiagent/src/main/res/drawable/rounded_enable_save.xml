<!-- res/drawable/rounded_enable_save.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 禁用状态，40% 透明 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#660055FF" /> <!-- 40% 透明的 #0055FF -->
            <corners android:radius="16dp" /> <!-- 圆角半径设置 -->
        </shape>
    </item>

    <!-- 启用状态，不透明 -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0055FF" /> <!-- 不透明的 #0055FF -->
            <corners android:radius="16dp" /> <!-- 圆角半径设置 -->
        </shape>
    </item>
</selector>