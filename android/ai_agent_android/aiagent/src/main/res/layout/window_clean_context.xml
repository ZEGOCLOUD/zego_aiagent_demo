<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="130dp"
        android:layout_height="96dp"
        android:background="@drawable/rounded_clean_context"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_ai_setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:src="@mipmap/icon_edit"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/icon_settings_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/ai_setting"
            android:textColor="#2A2A2A"
            android:textSize="14sp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@id/icon_clean"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/icon_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFF0F2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/icon_settings_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/icon_clean"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/icon_clean"
            app:layout_constraintTop_toBottomOf="@+id/icon_ai_setting"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/icon_clean_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:text="清除上下文"
            android:textColor="#2A2A2A"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/icon_ai_setting"
            app:layout_constraintStart_toEndOf="@id/icon_clean" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="8dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/container"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>